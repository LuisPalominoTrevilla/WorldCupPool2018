<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
         <script src="/Javascript/jQuery/jquery-3.3.1.min.js"></script>
        <title><%= username %></title>
        <script src="/Javascript/popper.min.js"></script>
        <link rel="stylesheet" type="text/css" href="/Bootstrap/css/bootstrap.min.css">
        <script src="/Bootstrap/js/bootstrap.js"></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/dashboard.css">
        <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
        <style>
            body{
                background-image: url('<%= background %>');
                background-repeat:no-repeat;
                background-size:cover;
                background-attachment: fixed;
                background-position: right bottom;
            }
        </style>
    </head>
    <body>
        <% include top-bar.ejs %>

        <div class="container main-wrapper">
            <div class="row" id="groups-tables" >
                <div class="col-lg-6 table-responsive" v-for="group in groups" >
                    <table class="table table-striped" v-cloak>
                        <!-- Table header right here -->
                        <thead>
                            <tr>
                                <th>Grupo {{group[0].group_name}}</th>
                                <th>PJ</th>
                                <th>G</th>
                                <th>E</th>
                                <th>P</th>
                                <th>GF</th>
                                <th>GC</th>
                                <th>DG</th>
                                <th>Pts</th>
                            </tr>
                        </thead>
                        <!-- Table content (using vue.js -->
                        <tr v-for="team in group">
                            <td><img v-bind:src="team.flag" class="flag-img">{{team.name}}</td>
                            <td>{{team.played}}</td>
                            <td>{{team.won}}</td>
                            <td>{{team.tied}}</td>
                            <td>{{team.lost}}</td>
                            <td>{{team.goals_favor}}</td>
                            <td>{{team.goals_against}}</td>
                            <td>{{team.goal_difference}}</td>
                            <td>{{team.points}}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        
        <script src="/Javascript/groups.js"></script>
        <script src="/Javascript/countdown.js"></script>
    </body>
</html>